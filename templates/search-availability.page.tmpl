{{template "base" .}}

{{define "content"}}
    <!-- main page content -->
    <main class="w-100 pb-5 mb-4 mt-2">

        <!-- page container -->
        <div class="container">
            <!-- hero -->
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <h1 class="mt-5">Search For Availability</h1>
                    <!-- reservation form -->
                    <form action="/reservation" method="get" novalidate class="needs-validation">
                        <div id="reservation-dates" class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label for="start_date" class="form-label">Starting Date</label>
                                    <input required type="text" class="form-control" id="start_date"
                                           name="start_date" aria-describedby="startDateHelp"
                                           placeholder="Arrival date">
                                    <small id="startDateHelp" class="form-text text-muted">
                                        Enter your starting date in the form of MM-DD-YYYY.</small>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <label for="end_date" class="form-label">Ending Date</label>
                                    <input required type="text" class="form-control" id="end_date"
                                           name="end_date" aria-describedby="endDateHelp"
                                           placeholder="Departure date">
                                    <small id="endDateHelp" class="form-text text-muted">
                                        Enter your ending date in the form of MM-DD-YYYY</small>
                                </div>
                            </div>
                        </div>

                        <hr>

                        <button type="submit" class="btn btn-primary mt-3">Search Availability</button>
                    </form>

                    <div>
                        <p id="values" class="text-center"></p>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <p id="myParagraph">This is some text!</p>
                    <p class="paraClass secondClass">This is some text!</p>
                    <p class="paraClass">This is some text!</p>
                    <p class="paraClass">This is some text!</p>
                    <p id="lastPara" class="paraClass">This is some text!</p>
                    <p>
                        <button class="btn btn-outline-secondary" id="colorButtton">Click me</button>
                    </p>
                </div>
            </div>
        </div>
    </main>
{{end}}